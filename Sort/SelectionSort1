#include <stdio.h>
void main() {
	int list[] = { 69,19,39,29,16,3,21,1 };
	int tmp,min = 0;
	for (int j = 0; j < 8; j++) {
		min = j;
		for (int i = j; i < 8; i++) {
			if (list[i] < list[min])
				min = i;
		}
		
		tmp = list[j];
		list[j] = list[min];
		list[min] = tmp;
	}
	printf("작은값: %d, 인덱스 : %d\n", list[min], min);
	for (int i = 0; i < 8; i++)
		printf("%5d", list[i]);
	printf("\n");
}
